{
  "family": "telegen-collector",
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE", "EC2"],
  "cpu": "512",
  "memory": "1024",
  "containerDefinitions": [
    {
      "name": "telegen-collector",
      "image": "ghcr.io/mirastacklabs-ai/telegen:v2.1.0",
      "cpu": 512,
      "memory": 1024,
      "memoryReservation": 256,
      "essential": true,
      "privileged": false,
      "user": "65534:65534",
      "command": [
        "--config=/etc/telegen/config.yaml",
        "--mode=collector"
      ],
      "environment": [
        {
          "name": "OTEL_EXPORTER_OTLP_ENDPOINT",
          "value": "http://otel-collector.internal:4317"
        },
        {
          "name": "TELEGEN_SNMP_ENABLED",
          "value": "true"
        },
        {
          "name": "TELEGEN_STORAGE_ENABLED",
          "value": "true"
        },
        {
          "name": "AWS_REGION",
          "value": "${AWS_REGION}"
        }
      ],
      "secrets": [
        {
          "name": "SNMP_COMMUNITY",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:telegen/snmp-community"
        },
        {
          "name": "SNMP_AUTH_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:telegen/snmp-auth"
        },
        {
          "name": "SNMP_PRIV_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:${AWS_REGION}:${AWS_ACCOUNT_ID}:secret:telegen/snmp-priv"
        }
      ],
      "portMappings": [
        {
          "containerPort": 19090,
          "protocol": "tcp"
        },
        {
          "containerPort": 8080,
          "protocol": "tcp"
        },
        {
          "containerPort": 162,
          "protocol": "udp"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "wget -q --spider http://localhost:8080/healthz || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      },
      "readonlyRootFilesystem": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/telegen-collector",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "telegen",
          "awslogs-create-group": "true"
        }
      },
      "dockerLabels": {
        "app": "telegen",
        "component": "collector",
        "version": "2.1.0"
      }
    }
  ],
  "volumes": [],
  "tags": [
    {
      "key": "Application",
      "value": "telegen"
    },
    {
      "key": "Component",
      "value": "collector"
    },
    {
      "key": "ManagedBy",
      "value": "terraform"
    }
  ]
}
